{
  "manifest_version": 2,

  "name": "Github Code Review",
  "description": "This extension will allow users to comment on github files",
  "version": "1.0",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
        "tabs",
        "contextMenus"
    ],
    "icons": {
      "16": "bear.png"
    },
   "content_scripts": [ {
    "matches": ["http://*/*", "https://*/*"],
    "css": ["css/bootstrap.min.css"],
    "js": ["js/dependencies/jquery.min.js", "js/content.js", "js/modules/highlight.js", "js/modules/deserialize.js", "js/dependencies/bootstrap.min.js"],
    "all_frames": true
  }]
}
